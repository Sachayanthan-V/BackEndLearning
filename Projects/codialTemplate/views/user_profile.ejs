  #btn:after {
    content: "";
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    box-shadow: 0px 0 0 0 white;
    font-weight: 700;
    transition: all 2s ease;
  }
  
  #btn:hover:after {
    box-shadow: 0px -13px 56px 12px blue;
  }
  
  #btn span {
    position: absolute;
    width: 100%;
    font-size: 15px;
    font-weight: 100;
    left: 50%;
    top: 39%;
    letter-spacing: 3px;
    text-align: center;
    transform: translate(-50%, -50%);
    color: green;
    font-weight: 700;
    transition: all 2s ease;
  }
  
  #btn:hover span {
    color: white;
  }
  
  #btn:before {
    content: "";
    position: absolute;
    width: 0;
    height: 100%;
    background-color: black;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    transition: all 1s ease;
  }
  
  #btn:hover:before {
    width: 100%;
  }
  
