<style>
    * {
    margin: 0px;
    padding: 0px;
}


  body {
    background-color: white;
    background-color: #212121;
    height: 100vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  body #nav {
    top: 0px;
    min-height: 8vh;
    width: 100vw;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  body main {
    min-width: 100vw;
    height: 75vh;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  form {
    display: flex;
    justify-content: center;
    align-items: flex-end;
    flex-direction: column;
  }
  form h1 {
    color: lightblue;
  }
  form .form-control {
    position: relative;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    margin: 20px 0 0px;
    width: 250px;
  }
  form .form-control input {
    background-color: transparent;
    border: 0;
    border-bottom: 2px #fff solid;
    display: block;
    width: 100%;
    padding: 15px 0;
    font-size: 18px;
    color: #fff;
  }
  form .form-control input:focus,
  form .form-control input:valid {
    outline: 0;
    border-bottom-color: lightblue;
  }
  form .form-control label {
    position: absolute;
    top: 15px;
    left: 0;
    pointer-events: none;
  }
  form .form-control label span {
    display: inline-block;
    font-size: 18px;
    min-width: 5px;
    color: #fff;
    transition: 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
  }
  form .form-control input:focus + label span,
  form .form-control input:valid + label span {
    color: lightblue;
    transform: translateY(-30px);
  }
  form button {
    position: relative;
    display: inline-block;
    margin: 15px;
    padding: 15px 30px;
    text-align: center;
    font-size: 18px;
    letter-spacing: 1px;
    text-decoration: none;
    color: #725AC1;
    background: transparent;
    cursor: pointer;
    transition: ease-out 0.5s;
    border: 2px solid #725AC1;
    border-radius: 10px;
    box-shadow: inset 0 0 0 0 #725AC1;
  }
  form button:hover {
    color: white;
    box-shadow: inset 0 -100px 0 0 #725AC1;
  }
  form button:active {
    transform: scale(0.9);
  }
  
